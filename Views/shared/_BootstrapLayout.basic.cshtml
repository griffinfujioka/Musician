@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
        @RenderSection("head", required: false)
        @Html.Partial("_html5shiv")
        <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
        <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/jquery-1.7.2.min.js"><\/script>')</script>
        <script src="js/bootstrap.min.js"></script>
        @* favicons and touch icons go here *@
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="/" title="change in _bootstrapLayout.basic.cshtml">Prometheus Brown</a>
                    <ul class="pull-right" style="padding-top:7px;">
                        <li>
                            <a href="http://www.tumblr.com" style="padding:10px;"><i class="icon-tumblr icon-10"></i> </a>
                            <a href="http://www.instagram.com" style="padding:10px;"><i class="icon-instagram icon-10"></i> </a>
                            <a href="http://www.youtube.com" style="padding:10px;"><i class="icon-youtube icon-10"></i> </a>
                            <a href="http://www.facebook.com" style="padding:10px;"><i class="icon-facebook icon-10"></i> </a>
                            <a href="http://www.linkedin.com" style="padding:10px;"><i class="icon-linkedin icon-10"></i> </a>
                            <a href="http://www.twitter.com" style="padding:10px;"><i class="icon-twitter icon-10"></i> </a>
                            <a href="http://www.github.com" style="padding:10px;"><i class="icon-github icon-10"></i> </a>
                        </li>
                        
                    </ul>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            @Html.Navigation()
                        </ul>
                    </div>
                </div>
            </div>
        </div>        
        <div class="container">
            @Html.Partial("_alerts")
            @Html.Partial("_validationSummary")
            @RenderBody()   
            <hr>
            <footer>
                <p>&copy; Griffin Fujioka @System.DateTime.Now.ToString("yyyy"). <a href="mailto:fujiokag@hotmail.com">Email me.</a></p>
            </footer> 
        </div>
         @Scripts.Render("~/js")
         @RenderSection("Scripts", required: false)
    </body>
</html>

